/* pages/member/favorites.wxss */

.section-switchbar {
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}

.section-switchbar__main {
  flex: 1;
  font-size: var(--text-size);
  color: var(--text-primary);
}

.section-item {
  padding: 0 30rpx;
  background-color: #fff;
}

.section-item__wrap {
  padding: 30rpx 0;
  display: flex;
}

.section-item__thumb {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
  margin-right: 24rpx;
  overflow: hidden;
}

.section-item__main {
  flex: 1;
}

.section-item__text {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.section-item__info {
  display: flex;
  font-size: 26rpx;
  line-height: 32rpx;
  color: var(--text-secondary);
}

.section-item__info .sign {
  color: var(--theme-color);
}

.section-item__info-icon {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.swiper-cell-btn{
  width: 80px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
  background-color: var(--color-red);
}