/* pages/store/list.wxss */

@import '../agency/index.wxss';

.spacer{
  background-color: var(--page);
}

.filter-section {
  width: 100%;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  box-sizing: border-box;
  z-index: 101;
}

.filter-section__city {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-right: 30rpx;
}

.filter-section__after {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  text-align: right;
  font-size: 28rpx;
  color: var(--text-primary);
}