/* pages/live/index.wxss */
view{
  box-sizing: border-box;
}
.live{
  min-height: 100vh;
  background-color: #fff;
  padding: 30rpx;
}

.live_title{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}
.live_title image{
  width: 34rpx;
  height: 30rpx;
}
.live_title text{
  color: #3FBB5D;
  font-size: 36rpx;
  font-weight: bold;
  margin: 0 30rpx;
}

.play{
  width: 690rpx;
  height: 546rpx;
  background-color: #F2F2F2;
  padding: 35rpx 20rpx 0;
  margin-bottom: 60rpx;
}
.play_title{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
  margin-bottom: 32rpx;
}
.play_title text{
  width: 50%;
}
.play_title text:last-child{
  text-align: right;
}
.play_video{
  width: 650rpx;
  height: 300rpx;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}
.play_video image{
  width: 100%;
  height: 100%;
}
.play_btn{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.play_btn button{
  width: 200rpx;
  height: 78rpx;
  line-height: 78rpx;
  border-radius: 6rpx;
  color: #fff;
  font-size: 30rpx;
}
.play_btn button:first-child{
  background-color: #3FBB5D;
}
.play_btn button:last-child{
  background-color: #52ACDF;
}

.classify{
  width: 100%;
  position: relative;
}
.classify::before{
  width: 10rpx;
  height: 100%;
  content: ' ';
  border-radius: 5rpx;
  background-color: #F2F2F2;
  position: absolute;
  top: 0;
  left: 0;
}

.classify_item{}
.item_title{
  display: inline-block;
  min-width: 180rpx;
  line-height: 70rpx;
  border-radius: 6rpx;
  background-color: #F2F2F2;
  font-size: 26rpx;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}
.item_images{
  padding-left: 30rpx;
  display: grid;
  grid-template-columns: 220rpx 220rpx 220rpx;
  margin-bottom: 30rpx;
}
.item_images image{
  width: 200rpx;
  height: 80rpx;
  border-radius: 6rpx;
  overflow: hidden;
  /* box-shadow: 1px 1px 2px #ccc; */
  margin-bottom: 20rpx;
}