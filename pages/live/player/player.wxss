/* pages/live/player/player.wxss */
view{
  box-sizing: border-box;
}
.player{
  width: 100%;
  height: 100vh;
  position: relative;
}

#video{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
}

.player_top{
  width: 100%;
  height: 175rpx;
  background-color: rgba(0, 0, 0, .3);
  position: absolute;
  left: 0;
  top: 0;
  z-index: 5;
  padding: 0 30rpx;
}
.player_title{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #3FBB5D;
  font-size: 36rpx;
  font-weight: bold;
  padding-top: 38rpx;
  margin-bottom: 42rpx;
}
.player_title image{
  width: 34rpx;
  height: 30rpx;
}
.player_title text{
  margin: 0 30rpx;
}

.player_txt{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #fff;
}

/* 控制按钮 */
.control{
  width: 260rpx;
  height: 260rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, .2);
  padding: 13rpx;
  position: absolute;
  left: 50%;
  bottom: 173rpx;
  z-index: 5;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.control image{
  width: 62rpx;
  height: 44rpx;
}
.control_center{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.control_center image:first-child{
  transform: rotate(-90deg);
}
.control_center image:last-child{
  transform: rotate(90deg);
}
.control_center text{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: solid 1px #fff;
  margin: 0 20rpx;
}
.control_bottom{
  transform: rotate(180deg);
}

.player_bottom{
  width: 100%;
  padding: 20rpx 30rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.player_bottom_left{
  font-size: 26rpx;
  color: #fff;
  text-align: center;
  display: flex;
  align-items: center;
}
.player_bottom_left>view{
  margin-right: 38rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.player_bottom_left>view:first-child image{
  width: 40rpx;
  height: 40rpx;
}
.player_bottom_left>view:last-child image{
  width: 45rpx;
  height: 45rpx;
}
.player_bottom button{
  width: 500rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 6rpx;
  background-color: #3FBB5D;
  font-size: 36rpx;
  color: #fff;
}

/* 弹出层 */
.popup_form{
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  position: relative;
  padding: 30rpx;
}
.form_title{
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  padding-top: 40rpx;
  margin-bottom: 44rpx;
}
.icon{
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  color: #999;
  font-size: 50rpx;
}

.form-item{
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}

.getCode{
  color: #3FBB5D;
  font-size: 30rpx;
  vertical-align: middle;
}

.form-btn{
  padding-top: 30rpx;
}
.form-btn button{
  background-color: #3FBB5D;
  color: #fff;
  border-radius: 6rpx;
  font-size: 32rpx;
}
.van-cell{
  background-color: #F7F7F7 !important;
}