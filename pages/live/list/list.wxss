/* pages/live/list.wxss */
.list{
    padding: 30rpx;
    min-height: 100vh;
    background-color: #fff;
}

.advert_image{
  width: 100%;
  height: 200rpx;
  border-radius: 6rpx;
  margin-bottom: 30rpx;
}

.list_content{
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.list_item{
  width: 335rpx;
  height: 537rpx;
  background-color: #F7F7F7;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  position: relative;
}
.item_bg{
  width: 335rpx;
  height: 335rpx;
}
.item_mask{
  width: 335rpx;
  height: 335rpx;
  position: absolute;
  top: 0;
  left: 0;
  font-size: 50rpx;
  font-weight: bold;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.item_mask>view{
  margin-bottom: 20rpx;
}
.item_mask image{
  width: 30rpx;
  height: 34rpx;
}
.item_title{
  padding: 20rpx 20rpx 0;
  font-size: 28rpx;
  color: #333333;
}
.item_bottom{
  display: flex;
  align-items: center;
  padding: 20rpx;
  color: #000;
}
.item_bottom>text:first-child{
  width: 50rpx;
  font-weight: bold;
  font-size: 24rpx;
  margin-right: 9rpx;
}
.item_bottom image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 4rpx;
  margin-right: 9rpx;
}
.item_bottom>text:last-child{
  width: 185rpx;
  font-size: 34rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}