/* pages/index/index.wxss */

page {
  background-color: #fff;
}
.contain {
}
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.van-dropdown-menu {
  flex: 1;
  --dropdown-menu-height: 80rpx;
  width: 90vw;
}

.name-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  --input-font-size: 28rpx;
}

/* 调整单元格样式 */
.van-cell {
  --cell-font-size: 28rpx;
  --cell-line-height: 1.6;
  --cell-vertical-padding: 24rpx;
}

/* 二维码容器样式 */
.qr-container {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
}
/* 吸顶容器样式 */
.search-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 999; /* 确保在内容上方 */
}

/* 搜索区域下拉菜单区域 */
.search-bar {
  margin-bottom: 16rpx;
}

/* 搜索行样式 */
.search-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 输入框样式 */
.name-input {
  flex: 1; /* 占满剩余空间 */
}

/* 内容区域样式 */
.container {
  padding: 16rpx;
  margin-top: 220rpx; /* 留出吸顶区域的高度，避免内容被遮挡 */
}

/* 结果项间距 */
.result-item {
  margin-bottom: 20rpx;
}

/* 二维码按钮容器 */
.qr-button-container {
  padding: 20rpx;
  text-align: center;
  background-color: #f9f9f9;
  border-top: 1rpx solid #eee;
}

/* 二维码按钮样式 */
.qr-button {
  --button-primary-background-color: #1677ff !important;
  --button-primary-border-color: #1677ff !important;
  --button-border-radius: 8rpx !important;
  --button-font-size: 26rpx !important;
  width: 200rpx !important;
}
.no-result {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin: 300rpx auto;
}
