/* pages/postion/index.wxss */

.current-city {
  padding: 40rpx 30rpx 20rpx 30rpx;
  background-color: #fff;
}

.current-city .title {
  font-size: 14px;
  color: #999;
  margin-bottom: 24rpx;
}

.current-city__list {
  display: flex;
  flex-wrap: wrap;
}

.box {
  margin: 0 20rpx 20rpx 0;
  height: 70rpx;
  font-size: 16px;
  color: #282a2b;
  text-align: center;
  line-height: 70rpx;
  padding: 0 24rpx;
  border: 1rpx solid #cdd2dc;
}

.no-auth {
  flex: 1;
  display: flex;
  width: 100%;
  font-size: 14px;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.no-auth .tips{
  font-size: 14px;
  color: #333;
}