page {
  /* 优化渐变色彩，更柔和的蓝白过渡 */
  min-height: 100vh;
  /* 防止内容溢出 */
  overflow-x: hidden;
}

.header-box {
  width: 100vw;
  background-color: #fff;
}

.header {
  width: 100%;
  height: 88rpx;
  color: #000000;
  font-size: 34rpx;
  font-weight: 500;
  position: relative;
  text-align: center;
  line-height: 88rpx;
}
.downArrow {
  width: 38rpx;
  height: 38rpx;
  transform: rotate(90deg);
  position: absolute;
  left: 34rpx;
  top: 25rpx;
  z-index: 999;
}
.title {
  font-weight: 400;
  font-size: 28rpx;
  color: #000000;
}

.form-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
  padding: 32rpx 24rpx;
  margin: 32rpx 24rpx;
}
.field-item {
  margin-bottom: 24rpx;
}
