<view class="page">
	<view class="notice-content">
		<view class="form-card">
			<van-cell-group>
				<van-field
				 label="申报企业名称"
				 placeholder="请输入申报企业名称"
				 value="{{ msgCode }}"
				 clearable
				 center
				 custom-class="field-item"
				 required="true"
				/>
				<van-field
				 label="联系人姓名"
				 placeholder="请输入联系人姓名"
				 value="{{ contactName }}"
				 clearable
				 center
				 custom-class="field-item"
				 required="true"
				/>
				<van-field
				 label="联系人电话"
				 placeholder="请输入联系人电话"
				 value="{{ contactPhone }}"
				 clearable
				 center
				 custom-class="field-item"
				 required="true"
				/>
				<view>
					<view class="blick_title goPadding">
						<span style="color: #ee0a24; position: absolute;left: 16rpx;  font-size: 32rpx;">*</span>
						企业营业执照上传
					</view>
					<view class="blick_titleGo">
						<text style="color:#ee0a24;font-weight:bold;">温馨提示：</text>
						<br/>
						至少上传1个文件，最多上传6个文件，上传格式仅限： .jpg .png .pdf，单文件小于2M</view>
					<view class="padleft30">
						<van-uploader
						 accept="image"
						 max-count="6"
						 max-size="2097152"
						 preview-size="180rpx"
						 name="licenseimg"
						 use-before-read
						 bind:before-read="beforeRead"
						 file-list="{{ licenseimgFile }}"
						 bind:after-read="afterRead"
						 bind:delete="removeFile"
						/>
					</view>
				</view>
				<view class="button-section">加入协会</view>
			</van-cell-group>
		</view>
	</view>

</view>

