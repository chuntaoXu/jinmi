/* pages/nearby/index.wxss */

@import '../agency/index.wxss';

page {
  background-color: var(--page);
}

.section-item {
  background-color: #fff;
}

.filter-section {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  box-sizing: border-box;
  z-index: 101;
}

.filter-section__city {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-right: 30rpx;
}

.filter-section__after {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  text-align: right;
  font-size: 28rpx;
  color: var(--text-primary);
}

.filter-section__after .triangle-down {
  margin-left: 8rpx;
  border-width: 12rpx 9rpx 0 9rpx;
  border-top-color: var(--text-primary);
}

.filter-section__after .triangle-up{
  margin-left: 8rpx;
  border-width: 0 9rpx 12rpx 9rpx;
  border-bottom-color: var(--text-primary);
}

.filter-container {
  padding-top: 98rpx;
}

.filter-item {
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.filter-item__text {
  font-size: 28rpx;
  color: var(--text-primary);
}

.filter-item.current .custom-icon,
.filter-item.current .filter-item__text {
  color: var(--theme-color) !important;
}