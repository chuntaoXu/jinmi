/* pages/goods/detail.wxss */

@import "./detail.skeleton.wxss";
.page{
  padding-bottom: 120rpx;
}
.section-banner {
  position: relative;
  background-color: #fff;
}

.section-banner__swiper {
  height: 750rpx;
}

.section-banner__dots {
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  padding: 14rpx 24rpx;
  color: #fff;
  font-size: 24rpx;
  background-color: rgba(0, 0, 0, .5);
  border-radius: 60rpx;
  z-index: 1;
}

.section-goods {
  padding: 30rpx;
  display: flex;
  background-color: #fff;
}

.section-goods__info {
  flex: 1;
}

.section-goods__info-text {
  font-size: 30rpx;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

.section-goods__info-desc {
  display: flex;
  align-items: baseline;
  font-size: 24rpx;
  color: var(--text-light);
}

.section-goods__amount {
  display: flex;
  align-items: baseline;
  font-size: 36rpx;
  color: var(--theme-color);
}

.section-goods__amount .sign {
  font-size: 24rpx;
}

.section-goods__after {
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.section-goods__after-icon,
.section-goods__after-text {
  color: var(--text-secondary);
}

.section-goods__after-text {
  padding-top: 8rpx;
  font-size: 20rpx;
}

.section-goods__after.current .section-goods__after-icon,
.section-goods__after.current .section-goods__after-text {
  color: var(--theme-color);
}

.custon-icon {
  width: 110rpx;
  height: 110rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 30rpx;
}

.custom-title {
  padding-right: 80rpx;
  font-size: 36rpx;
  color: var(--text-primary);
}

.custom-title__icon {
  position: absolute;
  right: 30rpx;
  top: 0rpx;
  width: 60rpx;
  height: 66rpx;
  /* z-index: 10; */
}

.custom-value {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.section-detail {
  padding-top: 30rpx;
  background-color: #fff;
  overflow: hidden;
}

.section-detail__title {
  font-size: 30rpx;
  padding: 0 30rpx;
  color: var(--text-primary);
}

.custom-label {
  display: flex;
}

.custom-label__item {
  flex: 1;
  padding: 0 24rpx;
}

.custom-label__item:first-child {
  border-right: 1rpx solid var(--light-border);
}

.custom-label__item-nav {
  display: flex;
  align-items: center;
}

.custom-jiaquan{
  word-break: break-all;
}

.bottom{
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: solid 1rpx #f2f2f2;
}
.bottom_left{
  width: 40%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-right: 20rpx;
}
.bottom_share{
  background-color: none;
  border: none !important;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  color: #999;
  padding: 0 !important;
}
.bottom_share image{
  width: 40rpx;
  height: 40rpx;
}
.bottom_share .van-button__text{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  color: #999;
}
.bottom_right{
  width: 200rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  background-color: #3FBB5D;
  margin-right: 20rpx;
}
.popup_image{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  color: #999;
}

.popup view,
.popup_form,
.popup_form view{
  box-sizing: border-box;
}
.popup_top{
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  padding-top: 20rpx;
}
.popup_bottom{
  text-align: center;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #999;
  border-top: solid 1rpx #f1f1ff;
}

.popup_form{
  width: 660rpx;
  padding: 60rpx 30rpx;
}
.radio{
  display: flex;
  justify-content: space-around;
}
.popup_submit{
  width: 150rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  text-align: center;
  color: #fff;
  font-size: 26rpx;
  background-color: #3FBB5D;
  margin: 30rpx auto 0;
}

