/* pages/index/index.wxss */

page {
  background-color: #fff;
}

.navigation-section {
  padding: 30rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.navigation-section__city {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-right: 30rpx;
}

.navigation-search {
  flex: 1;
  background-color: var(--page);
  display: flex;
  align-items: center;
  padding: 12rpx 30rpx;
  border-radius: 30px;
  overflow: hidden;
}

.navigation-search__scan {
  display: flex;
  align-items: center;
  padding-right: 24rpx;
  margin-right: 18rpx;
  font-size: 28rpx;
  color: var(--theme-color);
  border-right: 1rpx solid var(--border);
}

.navigation-search__placeholder {
  padding-left: 8rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
}

.section-banner {
  padding: 30rpx;
}

.section-banner__container {
  position: relative;
  width: 100%;
}

.section-banner__swiper {
  width: 100%;
  height: 380rpx;
  overflow: hidden;
}

.section-banner__swiper-item {
  border-radius: 16rpx;
  overflow: hidden;
}

.section-banner__dots {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  padding: 12rpx 0;
  text-align: right;
  z-index: 1;
}

.section-banner__dots-dot {
  float: left;
  width: 10rpx;
  height: 10rpx;
  border-radius: 30px;
  margin: 0 6rpx;
  transition: width 300ms;
  background-color: rgba(0, 0, 0, 0.4);
}

.section-banner__dots-dot.current {
  width: 24rpx;
  background-color: var(--theme-color);
}

.section-cube {
  padding: 20rpx 0;
  display: grid;
  grid-template-columns: repeat(4, minmax(25%, 1fr));
  overflow: hidden;
}

.section-cube__item {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.section-cube__item-entry {
  padding-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.section-cube__item-entry--icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 14rpx;
}

.section-cube__item-entry--text {
  font-size: 26rpx;
  color: var(--text-primary);
}

.section-head {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}

.section-head__text {
  flex: 1;
  font-size: 32rpx;
  color: var(--text-primary);
}

.section-head__entry {
  padding-right: 20rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.section-body {
  padding: 0 30rpx;
}

.section-article {
  margin-bottom: 30rpx;
}

.section-article__wrap {
  display: flex;
  justify-content: space-between;
}

.section-article__media {
  flex: 0 0 330rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: var(--page);
}

.section-article__media-video {
  width: 330rpx;
  height: 200rpx;
}

.section-article__media-title {
  font-size: 26rpx;
  color: var(--text-primary);
  margin: 20rpx 24rpx;
}

.section-article__media-tag {
  padding: 0 24rpx 30rpx 24rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.section-product__item {
  width: 100%;
  height: 220rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.section-article__item {
  padding: 30rpx 0;
}

.section-article__item-entry {
  display: flex;
  align-items: center;
  overflow: hidden;
}

.section-article__item-thumb {
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.section-article__item-main {
  flex: 1;
  width: calc(100% - 60rpx);
}

.section-article__item-text {
  width: 100%;
  font-size: 26rpx;
  color: var(--text-primary);
}

.section-article__item-sign {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.scancode-result-title {
  padding-top: 30rpx;
  font-size: 36rpx;
  color: var(--text-primary);
  text-align: center;
}

.scancode-result-tips {
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  color: var(--text-secondary);
  text-align: center;
}

.scancode-result-handle {
  padding: 40rpx 30rpx 0 30rpx;
  text-align: center;
}

.section-list {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  background-color: #fff;
}

.section-item {
  flex-basis: 50%;
  display: flex;
}

.section-list .section-item:nth-child(2n) {
  justify-content: flex-end;
}

.section-item__entry {
  width: 320rpx;
  margin-bottom: 20rpx;
}

.section-item__thumb {
  width: 320rpx;
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.section-item__text {
  padding: 20rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  text-align: center;
}

.van-picker__cancel {
  font-size: 32rpx !important;
}
.activeClass {
  color: #ff6a00 !important;
  font-weight: bold;
}
.title {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  height: 88rpx;
}
.title__cancel {
  position: absolute;
  left: 32rpx;
  font-size: 32rpx;
  color: #999;
  z-index: 2;
}
.title__text {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  color: #222;
}
.title__confirm {
  color: #576b95;
  font-size: 32rpx;
}
.van-popup-content__item {
  text-align: center;
  line-height: 140rpx;
  font-size: 40rpx;
  margin: 0 auto;
  padding: 0 20rpx;
}
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.last {
  line-height: 100rpx;
}

.dadd {
  height: 200rpx;
}
