/* pages/index/index.wxss */

page {
  background: #f7f8fa;
}

.container {
  min-height: 100vh;
  padding: 32rpx 24rpx;
  background: #f7f8fa;
}

.info-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1677ff;
  text-align: center;
  margin-bottom: 32rpx;
  letter-spacing: 2rpx;
}

.info-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.04);
  padding: 32rpx 24rpx;
}

.info-desc {
  font-size: 26rpx;
  color: #555;
  margin-bottom: 24rpx;
}

.info-list {
  margin-top: 8rpx;
}

.info-item {
  font-size: 24rpx;
  color: #444;
  line-height: 2.2;
  margin-bottom: 12rpx;
  display: flex;
  align-items: flex-start;
}

.emptyRound {
  width: 16rpx;
  height: 16rpx;
  border: 2rpx solid #1677ff;
  border-radius: 50%;
  display: inline-block;
  margin-right: 16rpx;
  background: transparent;
  margin-top: 12rpx;
}
.button-section {
  width: 80%;
  text-align: center;
  position: fixed;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(25, 137, 250, 1);
  border-radius: 16rpx;
  color: #fff;
}
